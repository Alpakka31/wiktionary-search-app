    },
    "appImage": {
      "description": "Search for a word on Wiktionary",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false
    },
    "files": [
      "dist/main/main.js",
      "dist/preload/preload.js",
      "dist/renderer/index.html",
      "dist/renderer/renderer.js",
      "dist/renderer/styles.css",
      "icon.ico",
      "icon.icns",
      "icon.png"
