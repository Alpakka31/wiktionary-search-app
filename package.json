{
  "name": "wiktionary-search-app",
  "version": "0.0.1",
  "homepage": "https://github.com/Alpakka31/wiktionary-search-app",
  "description": "Search for a word on Wiktionary",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "xcopy .\\src\\renderer\\index.html .\\dist\\renderer\\index.html /Y && xcopy .\\src\\renderer\\styles.css .\\dist\\renderer\\styles.css /Y && tsc",
    "package": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.github.Alpakka31.wiktionary-search-app",
    "productName": "Wiktionary Search App",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false
    },
    "files": [
      "dist/main/main.js",
      "dist/preload/preload.js",
      "dist/renderer/index.html",
      "dist/renderer/renderer.js",
      "dist/renderer/styles.css",
      "icon.ico"
    ],
    "directories": {
      "output": "build"
    }
  },
  "keywords": [
    "wiktionary"
  ],
  "author": "Alpakka31",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.7",
    "@typescript-eslint/parser": "^8.20.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.18.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
